@model flip_flop.Models.PlainTickets
<environment names="Development">
    <link rel="stylesheet" href="~/css/AddTargetInPlainTickets.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/AddTarget.js"></script>
</environment>
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>PlainTickets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Target" class="control-label"></label>
            <select asp-for="Target" asp-items="ViewBag.ListOfTargets" class="form-control" id="selectCategroy">
                <option value="">-- Select Destination --</option>
            </select>
            <button id="myBtn" onclick="Helper('block')" class="btn btn-default">Add Destination</button>
            <div>
                <span asp-validation-for="Target" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfFlight" class="control-label"></label>
                <input asp-for="DateOfFlight" class="form-control" />
                <span asp-validation-for="DateOfFlight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightNumber" class="control-label"></label>
                <input asp-for="FlightNumber" class="form-control" />
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerId" class="control-label"></label>
                <input asp-for="OwnerId" class="form-control" />
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CancleFee" class="control-label"></label>
                <input asp-for="CancleFee" class="form-control" />
                <span asp-validation-for="CancleFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Food" /> @Html.DisplayNameFor(model => model.Food)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Baggage" /> @Html.DisplayNameFor(model => model.Baggage)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <select asp-for="Class" class="form-control" asp-items="ViewBag.ListOfDepartments">
                    <option selected="selected" value="">-- Select Departments --</option>
                </select>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<!-- The Modal -->
<div id="Modal">

    <!-- Modal content -->
    <div id="modal-content">
        <span onclick="Helper('none')" id="close">&times;</span>
        @{Html.RenderPartial("AddTarget");}
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>
<environment>
<script src="~/js/AddTarget.js"></script>
</environment>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
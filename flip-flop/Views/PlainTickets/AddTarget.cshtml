@model flip_flop.Models.Targets
<environment names="Development">
    <link rel="stylesheet" href="~/css/AddCountey.css" />
    <script src="~/js/CreateCountry.js"></script>
</environment>

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Targets</h4>
<hr />
<div class="row">
    <div class="col-md-3" id="form">
        <form asp-action="CreateTarget" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <select asp-for="CountryName" class="form-control" asp-items="ViewBag.CountryKey"></select>
            </div>
            <div class="form-group">
                <label asp-for="CityName" class="control-label"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col-sm-3">
        <button id="AddButtom" class="btn btn-default" onclick="ShowAddCountry()">Add Country</button>
        <div id="addCountry">
            @{Html.RenderPartial("AddCountry");}
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
